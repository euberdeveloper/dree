{
  "name": "dree",
  "version": "2.4.4",
  "description": "A nodejs module wich helps you handle a directory tree providing you its abstraction through tested functions and a custom configuration.",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "bin": {
    "dree": "dist/bin/index.js"
  },
  "scripts": {
    "transpile": "tsc",
    "test": "mocha --reporter spec",
    "nyc": "nyc --extension=ts --reporter=html --reporter=text --reporter=lcov npm run test",
    "cover:coveralls": "nyc report --extension=ts --reporter=text-lcov | coveralls",
    "cover:codecov": "nyc report --extension=ts --reporter=text-lcov > coverage.lcov && codecov",
    "cover": "npm run cover:coveralls && npm run cover:codecov",
    "docs:html": "typedoc --out docs/html source/lib --plugin none --excludeNotExported --mode file",
    "docs:markdown": "typedoc --out docs/markdown source/lib --plugin typedoc-plugin-markdown --theme markdown --excludeNotExported --mode file",
    "docs:deploy": "now docs/html --name dree --prod --token $NOW_TOKEN",
    "docs": "npm run docs:html && npm run docs:markdown && npm run docs:deploy",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/euberdeveloper/dree.git"
  },
  "bugs": {
    "url": "https://github.com/euberdeveloper/dree/issues"
  },
  "homepage": "https://dree.euberdeveloper.now.sh",
  "keywords": [
    "dir",
    "directory",
    "tree",
    "folder",
    "structure",
    "directory-tree",
    "dir-tree",
    "folder-tree",
    "dir-structure"
  ],
  "author": "Eugenio Vinicio Berretta <euberdeveloper@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^12.12.22",
    "@types/yargs": "^13.0.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.9",
    "cz-conventional-changelog": "^3.0.2",
    "mocha": "^6.2.2",
    "now": "^16.7.0",
    "nyc": "^14.1.1",
    "typedoc": "^0.15.5",
    "typedoc-plugin-markdown": "^2.2.14",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "yargs": "^15.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
